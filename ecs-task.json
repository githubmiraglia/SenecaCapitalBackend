{
  "family": "seneca-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::941377137621:role/seneca-back-ECSTaskExecutionRole-qEWiAcfOBwa9",
  "taskRoleArn": "arn:aws:iam::941377137621:role/seneca-backend-app-role",
  "containerDefinitions": [
    {
      "name": "seneca-backend",
      "image": "941377137621.dkr.ecr.us-east-2.amazonaws.com/seneca-backend:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 8000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "DJANGO_SETTINGS_MODULE", "value": "backend_api.settings" },
        { "name": "DJANGO_ALLOWED_HOSTS", "value": "*" },
        { "name": "DJANGO_DEBUG", "value": "0" },
        { "name": "DJANGO_ENV", "value": "production" },
        { "name": "AWS_REGION", "value": "us-east-2" },
        { "name": "AWS_S3_BUCKET", "value": "loadbalancerseneca" },
        { "name": "POSTGRES_HOST", "value": "seneca-db.czuu6s8wsyz1.us-east-2.rds.amazonaws.com" },
        { "name": "POSTGRES_PORT", "value": "5432" },
        { "name": "POSTGRES_DB", "value": "postgres" },
        { "name": "DATABASE_SSL_REQUIRE", "value": "true" }
      ],
      "secrets": [
        {
          "name": "POSTGRES_PASSWORD",
          "valueFrom": "arn:aws:ssm:us-east-2:941377137621:parameter/seneca/POSTGRES_PASSWORD"
        },
        {
          "name": "DJANGO_SECRET_KEY",
          "valueFrom": "arn:aws:ssm:us-east-2:941377137621:parameter/seneca/DJANGO_SECRET_KEY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/controle-backend",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "retries": 3,
        "timeout": 5,
        "interval": 30,
        "startPeriod": 60,
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/healthz || exit 1"]
      }
    }
  ]
}
